<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ImageView
                android:id="@+id/title_track"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_txt_title_tracks"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
                android:id="@+id/txt_about_track"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select the Track"
                android:textAlignment="center"
                android:textColor="@color/textSlogan"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_track" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recordings"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_about_track">

        </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ic_controls_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_recordings"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Recording Name"
            android:textSize="22dp"
            android:textColor="@color/clickedBtntext"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"/>
        <soup.neumorphism.NeumorphImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:neumorph_shapeType="flat"
            android:adjustViewBounds="true"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/recording_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recordingprogress"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/recording_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recordingbtnplay"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previousbtn"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/recording_play_btn"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="11dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_forwardbtn"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/recording_play_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="11dp"/>




    </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>